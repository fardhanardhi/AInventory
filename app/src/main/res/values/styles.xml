<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Light base activity theme -->
    <style name="ActivityTheme.Primary.Base.Light" parent="Theme.AppCompat.NoActionBar">
        <item name="primaryColor">@color/primary</item>
        <item name="secondaryColor">@color/primaryDark</item>
        <item name="primaryTextColor">#33343B</item>
        <item name="secondaryTextColor">#8033343B</item>
        <item name="cardTextColor">@color/white</item>
        <item name="invertTextColor">@color/white</item>
        <item name="accentColor">#8033343B</item>
        <item name="cardColor">@color/primary</item>
    </style>

    <!-- Dark base activity theme -->
    <style name="ActivityTheme.Primary.Base.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="primaryColor">@color/white</item>
        <item name="secondaryColor">@color/primary</item>
        <item name="primaryTextColor">#F4F4F6</item>
        <item name="cardTextColor">@color/white</item>
        <item name="secondaryTextColor">#96F4F4F6</item>
        <item name="invertTextColor">#33343B</item>
        <item name="accentColor">@color/primary</item>
        <item name="cardColor">#33343B</item>
    </style>

    <!-- Specific Feed activity theme -->
    <style name="ActivityThemeLight" parent="ActivityTheme.Primary.Base.Light">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="ActivityThemeDark" parent="ActivityTheme.Primary.Base.Dark">
        <item name="android:windowBackground">@color/primaryDark</item>
    </style>

</resources>
