<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="?android:windowBackground">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Item Data"
        android:textColor="?attr/primaryTextColor"
        />

    <EditText
        android:id="@+id/et_namabarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item Name"
        android:inputType="text"
        android:textColor="?attr/primaryTextColor"
        android:backgroundTint="?attr/accentColor"
        android:textColorHint="?attr/secondaryColor"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/et_merkbarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Brand Name"
        android:inputType="text"
        android:textColor="?attr/primaryTextColor"
        android:backgroundTint="?attr/accentColor"
        android:textColorHint="?attr/secondaryColor"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_hargabarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price"
        android:inputType="number"
        android:textColor="?attr/primaryTextColor"
        android:backgroundTint="?attr/accentColor"
        android:textColorHint="?attr/secondaryColor"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:layout_marginTop="20dp"
        android:backgroundTint="?attr/secondaryColor"/>

</LinearLayout>